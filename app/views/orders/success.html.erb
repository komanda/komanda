<div class="row">
	<div class="offset2 span8">
		<div class="order-form-container default">
			<div class="alert alert-success">
					Order placed. Email confirmation has been sent to <strong><%= @order.email.upcase %></strong>. 
					Please print this page for you record.
			</div>
			
			
			<table class="summary">
				<tr>
					<td class="muted right">Order ID:</td>
					<td><%= current_user.carts.last.order.id %></td>
				</tr>
				
				
				<% if current_user.carts.last.order.transactions.count > 0 %>
					<tr>
						<td class="muted right">Transaction ID:</td>
						<td><%= current_user.carts.last.order.transactions.last.id %></td>
					</tr>
				<% end %>
			</table>
			
			<%= render current_user.carts.last %>
		</div>
	</div>
</div>
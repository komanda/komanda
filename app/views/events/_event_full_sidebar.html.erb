<% if admin_user? %>
	<%= render 'controlls' %>
<% end %>

<div class="default flyer-section">
	<%= image_tag @event.flyer %>
	
	<% if @event.upcoming? %>
		<div class="separator"></div>
		<% if current_user %>
			<%= link_to "Buy ticket",
				line_items_path(product_id: @event.ticket, qty: 1),
				class: "btn btn-primary",
				method: :post %>
			
			<div class="qty">
				Qty: <%= number_field_tag "ticket-qty", 1, in: 1...10 %>
			</div>
		<% else %>
			<%= link_to "Buy ticket", signin_path, class: "btn btn-primary" %>
		<% end %>		
	<% end %>
	
</div>

<%= render 'rating' %>

<%= render 'going_preview' %>

<% if @event.pictures.count > 0 %>
	<%= render 'pictures_preview' %>
<% end %>

<article id="<%= dom_id product %>" class="span4 default product">
	
	<% if admin_user? %>
		<div class="admin">
			<%= link_to "#{new_order_path}?product_id=#{product.id}" do %>
				<i class="icon-shopping-cart"></i>
			<% end %>
			
			<%= link_to edit_product_path(product) do %>
				<i class="icon-edit"></i>
			<% end %>
		
			<%= link_to product,
			 	method: :delete, 
				:data => { :confirm => 'Are you sure you want to delete this product?' } do %>
				<i class="icon-remove"></i>
			<% end %>
		</div>
	<% end %>

	<%= image_tag product.pictures.first, class: "main-picture", id: "main-picture-#{product.id}" %>

	<div class="thumbs">
		<% product.pictures.each do |picture| %>
			<%= image_tag picture, size: "50x50", 
				class: "thumb #{'selected' if  picture == product.pictures.first}" %>
		<% end %>
	</div>

	<p class="lead muted">
		<%= product.name %>

		<span class="price pull-right">$<%= product.price %></span>
	</p>
	
	<div class="controlls">
		Qty: <%= number_field_tag "qty", 1, in: 1...10 %>
		Size: <%= select_tag 'size', 
			"<option>S</option><option selected='selected'>M</option><option>L</option>".html_safe %>
		
		<% link_to "Add to cart", line_items_path(product_id: product), method: :post, 
			class: "btn btn-success add-to-cart", remote: true %>
		
		<%= link_to line_items_path(product_id: product), method: :post, 
				class: "btn btn-small pull-right add-to-cart", remote: true do %>
				<i class="icon-white icon-shopping-cart"></i> Add
		<% end %>
		

	</div>
	
</article>